<%- include("header") %>

<form action="/editing" class="compose-form" method="post">

    <label for="Title" class="label-compose"><h3 class="label-compose">Title:</h3></label>
    <input value="<%= chapter.title %>" type="text" class="compose-input text-input" name="titleInput" id="Title" maxlength="30" placeholder="Title" required minlength="3" size="30"> 

    <label for="Content" class="label-compose"><h3 class="label-compose">Content:</h3></label>
    <textarea class="compose-input textarea-input" name="contentInput" id="Content" maxlength="300" cols="30" rows="10" required placeholder="Content..."><%= chapter.content %></textarea>

    <input type="hidden" name="currentId" value="<%= chapter._id %>">
    <button class="button-compose" type="submit"><h3 class="button-compose-h3">Edit!</h3></button>
</form>

<%- include("footer") %>